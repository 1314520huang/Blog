<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netstudy.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.netstudy.bean.User">
        <id column="id" property="id" />
        <result column="login_name" property="loginName" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="user_name" property="userName" />
        <result column="head_id" property="headId" />
        <result column="state" property="state" />
        <result column="remark" property="remark" />
        <result column="create_date" property="createDate" />
        <result column="last_login" property="lastLogin" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, login_name, password, salt, user_name, head_id, state, remark, create_date, last_login
    </sql>

</mapper>
